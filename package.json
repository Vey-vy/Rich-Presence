{
  "name": "vey-rpc",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && copyfiles -u 1 \"src/**/*.html\" \"src/**/*.css\" \"src/assets/**/*\" dist",
    "start": "npm run build && electron .",
    "watch": "tsc -w",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/discord-rpc": "^4.0.9",
    "copyfiles": "^2.4.1",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.vey.rpc",
    "productName": "Vey RPC",
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "dist/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}